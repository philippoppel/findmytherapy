{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@mental-health/tsconfig/base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "types": ["node"]
  },
  "include": ["src"]
}
