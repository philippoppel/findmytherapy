# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Control which platform features are enabled/disabled
# Set to "true" to enable, "false" to disable
# Defaults: All features are enabled if not specified

# Assessment / Ersteinsch√§tzung
# Enables: Triage flow, PHQ-9/GAD-7/WHO-5 questionnaires, risk evaluation
NEXT_PUBLIC_FEATURE_ASSESSMENT=true

# Therapist Microsites
# Enables: Individual therapist landing pages (/t/[slug]), microsite editor, analytics
NEXT_PUBLIC_FEATURE_MICROSITE=true

# AI Chatbot
# Enables: Chat widget, knowledge base, support conversations
NEXT_PUBLIC_FEATURE_CHATBOT=true

# =============================================================================
# DATABASE
# =============================================================================

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mental_health_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# Mapbox (for therapist map view)
# Get your free token at: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN="pk.your_mapbox_token_here"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-min-32-chars"

# Email
EMAIL_FROM="noreply@mental-health-platform.com"
EMAIL_PROVIDER_API_KEY="your-email-api-key"
EMAIL_SMTP_HOST="localhost"
EMAIL_SMTP_PORT="1025"
EMAIL_SMTP_USER=""
EMAIL_SMTP_PASS=""

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_CONNECT_CLIENT_ID="ca_..."
STRIPE_PRICE_LISTING_MONTHLY="price_..."
STRIPE_PRICE_LISTING_YEARLY="price_..."
STRIPE_TAX_ENABLED="true"

# S3 Storage
S3_ENDPOINT="https://s3.eu-central-1.amazonaws.com"
S3_REGION="eu-central-1"
S3_BUCKET="mental-health-platform"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"

# Application
APP_BASE_URL="http://localhost:3000"
NODE_ENV="development"

# Dossier Encryption & Storage
# CRITICAL: Use a strong, randomly generated key for production (min 32 characters)
# Generate with: openssl rand -hex 32
DOSSIER_ENCRYPTION_KEY="your-encryption-key-here-min-32-chars-use-openssl-rand"
STORAGE_TYPE="local" # "local" for development, "s3" for production
LOCAL_STORAGE_PATH="/tmp/dossiers" # Only used when STORAGE_TYPE=local
